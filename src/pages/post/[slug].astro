export async function getStaticPaths() {
  // Credit to @rachsmithcodes for this function
  let posts = await Astro.glob(`../../posts/*.md`);

  return posts.map((post) => {
    return {
      params: { slug: post.frontmatter.slug },
      props: { post: post },
    };
  });
}

